<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="stlpapp.finalproject.app.com.appstlp.RequestForHelpActivity">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="เขียนคำร้องขอความช่วยเหลือ"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/line9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="********************************************************"
                        android:textColor="@android:color/holo_red_dark" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="เอกสารหลักฐานประเภท"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/RadioGroupCerBirth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RadioButton
                            android:id="@+id/yes_cerbirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCerBirthClick"
                            android:text="มีเอกสารรับรองการเกิด" />

                        <RadioButton
                            android:id="@+id/no_cerbirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCerBirthClick"
                            android:text="ไม่มีเอกสารรับรองการเกิด" />

                        <CheckBox
                            android:id="@+id/tr1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="สูติบัตร (ท.ร.๑)" />

                        <CheckBox
                            android:id="@+id/tr2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="สูติบัตร (ท.ร.๒)" />

                        <CheckBox
                            android:id="@+id/tr3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="สูติบัตร (ท.ร.๓)" />

                        <CheckBox
                            android:id="@+id/tr031"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="บุตรบุคคลที่ไม่มีสถานะทางทะเบียน (ท.ร.๐๓๑)" />

                        <CheckBox
                            android:id="@+id/tr1front"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ใบรับการแจ้งเกิด (ทร.๑ ตอนหน้า)" />

                        <CheckBox
                            android:id="@+id/tr1part1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="หนังสือรับรองการเกิด (ทร.๑/๑ ตอนที่ ๑)" />

                        <CheckBox
                            android:id="@+id/bcerbirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="หนังสือรับรองการเกิด" />

                        <CheckBox
                            android:id="@+id/bcerplacebirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="หนังสือรับรองสถานที่เกิด" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="********************************************************"
                        android:textColor="@android:color/holo_red_dark" />

                    <RadioGroup
                        android:id="@+id/RadioGroupCerRegister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RadioButton
                            android:id="@+id/yes_cerregister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCerRegisterClick"
                            android:text="มีเอกสารหลักฐานประเภททะเบียน" />

                        <RadioButton
                            android:id="@+id/no_cerregister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCerRegisterClick"
                            android:text="ไม่มีเอกสารหลักฐานประเภททะเบียน" />

                        <CheckBox
                            android:id="@+id/tr14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ทะเบียนบ้าน (ทร.๑๔)" />

                        <CheckBox
                            android:id="@+id/tr13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ทะเบียนบ้านในลักษณะชั่วคราว (ทร.๑๓)" />

                        <CheckBox
                            android:id="@+id/fmperson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="แบบพิมพ์ประวัติบุคคลบนพื้นที่สูง" />

                        <CheckBox
                            android:id="@+id/hfmperson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ทะเบียนประวัติชุมชนบนพื้นที่สูง ตามแผนแม่บทฯ ฉบับที่ ๒" />

                        <CheckBox
                            android:id="@+id/tr_chk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ทะเบียนสำรวจบัญชีบุคคลในบ้าน (ทร.ชข)" />

                        <CheckBox
                            android:id="@+id/tr38g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ทะเบียนบุคคลผู้ไม่มีสถานะทางทะเบียน (ท.ร.๓๘ ก)" />

                        <CheckBox
                            android:id="@+id/tr38_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ทะเบียนแรงงานต่างด้าว (ทร.๓๘/๑)" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="********************************************************"
                        android:textColor="@android:color/holo_red_dark" />

                    <RadioGroup
                        android:id="@+id/RadioGroupCerIDCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RadioButton
                            android:id="@+id/yes_ceridcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCerIDCardClick"
                            android:text="มีเอกสารหลักฐานประเภทบัตรประจำตัว" />

                        <RadioButton
                            android:id="@+id/no_cerridcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="onCerIDCardClick"
                            android:text="ไม่มีเอกสารหลักฐานประเภทบัตรประจำตัว" />

                        <CheckBox
                            android:id="@+id/thaiidcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="บัตรประจำตัวประชาชน" />

                        <CheckBox
                            android:id="@+id/notthaiidcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="บัตรประจำตัวคนซึ่งไม่มีสัญชาติไทย" />

                        <CheckBox
                            android:id="@+id/statelessidcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="บัตรประจำตัวบุคคลที่ไม่มีสถานะทางทะเบียน" />

                        <CheckBox
                            android:id="@+id/residencycer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ใบสำคัญประจำตัวคนต่างด้าว(ใบสำคัญถิ่นที่อยู่)" />

                        <CheckBox
                            android:id="@+id/refudgee_war"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="บัตรประจำตัวผู้ลี้ภัยจากการสู้รบ อื่นๆ" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/line10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="********************************************************"
                        android:textColor="@android:color/holo_red_dark" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="เลือกศูนย์ที่ต้องการขอความช่วยเหลือ"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/LinearListCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/RadioGroupCenter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ส่งคำร้อง"
                        android:onClick="isAddRequest"
                        android:textSize="18sp" />

                </LinearLayout>
            </ScrollView>


        </FrameLayout>

    </LinearLayout>
</layout>